<p id="notice"><%= notice %></p>

<h1>List of Assignments of <%= @user_name %></h1>

<div class = row>
  <% @assignments.each do |assignment| %>
    <div class="col-4 card">
      <%= image_tag assignment.task.image, size: '250x250'%>
      <h3><%= assignment.task.name %></h3>
      <p><%= assignment.is_done %></p>
    </div>
  <% end %>
</div>
<br>

